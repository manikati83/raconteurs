<div class="media border-bottom">
  <img class="mr-2 rounded" src="<%= gravatar_url(@topic.user, { size: 20 }) %>" alt="">
  <div class="media-body">
    <h5 class="mt-0"><%= @topic.user.name %></h5>
    <%= @topic.created_at %>
    <h1 class="mt-3"><%= @topic.title %></h1>
    <% @topic.hashtags.each do |tag| %>
      <li style="display: inline-block;"><%= "#" + tag.hashname %></li>
    <% end %>
  </div>
</div>
<div class="mt-5">
  <p><%= safe_join(@topic.content.split("\n"),tag(:br)) %></p>
</div>
<div>
  <%= link_to "Delete", @topic, method: :delete, data: { confirm: 'You sure?' }, class: 'btn btn-danger btn-sm' %>
</div>